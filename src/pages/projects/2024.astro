;---
import PageLayout from '../../layouts/PageLayout.astro';
import NavBar from '../../components/NavBar.astro';
import Spacer from '../../components/Spacer.astro';

import '../../styles/2024.css';

import { Image } from 'astro:assets';
import happi_svg from "../../assets/2024/happi.svg"
import slep_svg from "../../assets/2024/slep.svg"
import music_svg from "../../assets/2024/music.svg"
---

<PageLayout title="2024" includeNavBar={false}>

    <slot slot="head">
    <style>
      :root {
        --page-width: 116ch;
      }
    </style>
    </slot>

  <div id="page-2024">

    <div class="outer-div">
        <div class="centered-div">
            <NavBar/>
            <Spacer verticalSpace={60}/>
        </div>
    </div>
    

    <div class="page-section">

    <div class="outer-div">
        <div class="centered-div">
            <h1>my 2024 in numbers</h1>
